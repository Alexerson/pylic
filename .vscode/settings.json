{
    "python.defaultInterpreterPath": "${env:VIRTUAL_ENV}/bin/python",
    "[python]": {
        "editor.formatOnSave": true,
    },
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "python.languageServer": "Pylance",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true
    }
}
